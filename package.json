{
  "name": "meu-portfolio",
  "version": "1.0.0",
  "description": "Portfolio profissional desenvolvido com Angular, TypeScript e Tailwind CSS",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "dev": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:prod": "ng build --configuration production && npx http-server dist/meu-portfolio/browser -p 8080",
    "analyze": "ng build --configuration production --stats-json && npx webpack-bundle-analyzer dist/meu-portfolio/browser/stats.json",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "npm run build:prod && netlify deploy --prod --dir=dist/meu-portfolio/browser",
    "deploy:gh-pages": "ng build --configuration production --base-href='/meu-portfolio/' && npx angular-cli-ghpages --dir=dist/meu-portfolio/browser",
    "lint": "ng lint",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss}\"",
    "clean": "rm -rf dist node_modules .angular",
    "reinstall": "npm run clean && npm install"
  },
  "keywords": [
    "portfolio",
    "angular",
    "typescript",
    "tailwind",
    "responsive",
    "spa"
  ],
  "author": "Vitor Tenorio <vitortenorio14@hotmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.14",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular/cli": "^18.2.11",
    "@angular/compiler-cli": "^18.2.0",
    "@tailwindcss/forms": "^0.5.11",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.23",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.5.2"
  }
}